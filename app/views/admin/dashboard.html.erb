<div class="page-header">
  <h1>Dashboard</h1>
</div>
<h2>Net Sales <%= number_with_delimiter(@net_sales) %> Baht</h2>
<h2>Gross Profit <%= number_with_delimiter(@gross_profit) %> Baht</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Sales</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= @bought[product.id] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
