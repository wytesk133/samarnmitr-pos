<div class="page-header">
  <h1>Dashboard</h1>
  <p ng-app>{{<%= @total %> | currency:'฿':0}}</p>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>In-Stock</th>
        <th>ยังไม่ Ship</th>
        <th>ต้องสั่งผลิตเพิ่ม</th>
      </tr>
    </thead>
  
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.current_stock %></td>
          <td><%= @not_shipped[product.id] %></td>
          <td>
            <% if @not_shipped[product.id] <= product.current_stock %>
              0
            <% else %>
              <%= @not_shipped[product.id] - product.current_stock %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
