<div class="page-header">
  <h1>Dashboard</h1>
</div>
<h2>ยอดขาย <%= number_with_delimiter(@total) %> บาท</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Sales</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= @bought[product.id] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
