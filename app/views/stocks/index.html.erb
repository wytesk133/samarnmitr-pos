<% if notice %>
  <div class="alert alert-info"><%= notice %></div>
<% end %>

<h1>Listing Stocks</h1>

<p><%= link_to 'New Stock', new_stock_path %></p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>In-Stock</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.current_stock %></td>
      </tr>
    <% end %>
  </tbody>
</table>
