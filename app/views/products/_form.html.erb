<% if @product.errors.any? %>
  <div class="alert alert-danger">
    <strong><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</strong>
    <ul>
    <% @product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@product) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :cost %>
    <%= f.number_field :cost, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :picture %>
    <!-- TODO: ... -->
    <input type="file">
  </div>
  <div class="checkbox">
    <%= f.label :hidden do %>
      <%= f.check_box :hidden %> Hidden
    <% end %>
  </div>
  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>
