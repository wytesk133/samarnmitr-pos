<% if notice %>
  <div class="alert alert-info"><%= notice %></div>
<% end %>

<h1>Users</h1>

<p><%= link_to 'New User', new_user_path %></p>
<p>Total: <%= pluralize(@users.length, 'user') %></p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <td>
          <%= link_to 'Show', user %> |
          <%= link_to 'Edit', edit_user_path(user) %> |
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: "Destroy user '#{user.name}'?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
